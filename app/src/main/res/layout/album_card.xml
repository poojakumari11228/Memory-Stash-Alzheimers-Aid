
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"

        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_albumCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_albumCard"
                android:layout_marginTop="-1dp"
                android:background="@color/colorAccent"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:text="test text"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/relation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_tv"
                android:layout_marginTop="0dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:text="Anther txt"
                android:textColor="@color/white"
                android:textSize="@dimen/songs_count" />

            <Button
                android:id="@+id/dial_btn"
                android:layout_width="475dp"
                android:layout_height="29dp"
                android:layout_alignEnd="@+id/image_albumCard"
                android:layout_alignBottom="@+id/name_tv"
                android:layout_marginStart="-28dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/name_tv"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/icons_call"
                android:fontFamily="@font/aclonica"
                android:gravity="center" />

            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_below="@id/relation_tv"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:text="Anther txt"
                android:textColor="@color/white"
                android:textSize="@dimen/songs_count" />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_tv"
                android:background="@color/colorPrimary"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:text="Anther txt"
                android:textColor="@color/white"
                android:textSize="@dimen/songs_count" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>