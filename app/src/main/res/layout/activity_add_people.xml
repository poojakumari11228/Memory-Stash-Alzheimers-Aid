<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppPeople.AddPeopleActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="Add People"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />
        <Button
            android:id="@+id/catureImg_btn"
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:background="@color/colorAccent"
            android:drawableRight="@drawable/icons_screenshot"
            android:gravity="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/selectimg_btn"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:background="@color/colorAccent"
            android:drawableRight="@drawable/icons_photogallery"
            android:gravity="center"

            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="93dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="91dp"
            android:padding="2dp"
            android:src="@drawable/icons_addpeople" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="55dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/iconuser"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter name"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/allura"
            android:textColorHint="@color/white"
            android:textSize="20dp" />
    </LinearLayout><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_margin="6dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="59dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:drawableRight="@drawable/iconsrelation"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/relation_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:fontFamily="@font/allura"
        android:gravity="center"
        android:hint="Enter Relation"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="56dp"

            android:layout_height="62dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/iconsringer"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="phone"
            android:textColor="@color/white"
            android:id="@+id/phone_et"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/allura"
            android:hint="Enter Phone No:"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="59dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/iconsaddress"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/address_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:fontFamily="@font/allura"
            android:gravity="center"
            android:hint="Enter Address"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="10dp">
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addPeople_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon_add" />
    </LinearLayout>
</LinearLayout>

